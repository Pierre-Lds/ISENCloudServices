extends ../templates/layout

block content
    h1.my-3 #{title}

    div.row
        div.col-6
            table.table.table-striped.table-hover.table-bordered
                thead.thead-dark
                    tr
                        th Most used ressources
                            span.badge.badge-success.ml-1 ðŸ“‰
                tbody
                    if highestCountRessourcesObjects
                        for highestCountRessourcesObject in highestCountRessourcesObjects
                            tr
                                td
                                    a(href="/ressource/" + highestCountRessourcesObject._id + '/read') #{highestCountRessourcesObject.name} (#{highestCountRessourcesObject.count})
        div.col-6
            table.table.table-striped.table-hover.table-bordered
                thead.thead-dark
                    tr
                        th Less used ressources
                            span.badge.badge-danger.ml-1 ðŸ“ˆ
